<?xml version="1.0" encoding="UTF-8"?>
<FindBugsFilter>
    <!-- False positive: validateFilePath() IS the security validation method -->
    <Match>
        <Class name="com.moderndaytech.perception.security.SecurityValidator" />
        <Bug pattern="PATH_TRAVERSAL_IN" />
    </Match>

    <!-- False positives: log values are sanitized via sanitizeForLog() before logging -->
    <Match>
        <Class name="com.moderndaytech.perception.AutonomousPerceptionSystem" />
        <Method name="main" />
        <Bug pattern="CRLF_INJECTION_LOGS" />
    </Match>

    <!-- False positives: external strings are sanitized and length-bounded before logging -->
    <Match>
        <Class name="com.moderndaytech.perception.dataset.ONCEDatasetLoader" />
        <Method name="loadAnnotation" />
        <Bug pattern="CRLF_INJECTION_LOGS" />
    </Match>

    <Match>
        <Class name="com.moderndaytech.perception.dataset.ONCEDatasetLoader" />
        <Method name="buildLiDARSensor" />
        <Bug pattern="CRLF_INJECTION_LOGS" />
    </Match>
</FindBugsFilter>
