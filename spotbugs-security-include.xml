<?xml version="1.0" encoding="UTF-8"?>
<FindBugsFilter>
    
    <!-- 
    SpotBugs Security Include Filter
    
    This file specifies which security bug patterns to enforce during SAST scanning.
    Only bugs matching these patterns will be reported, reducing noise while
    maintaining focus on security-critical issues.
    -->
    
    <!-- Include all SECURITY category bugs -->
    <Match>
        <Bug category="SECURITY" />
    </Match>
    
    <!-- Specifically include SQL Injection detection -->
    <Match>
        <Bug pattern="SQL_INJECTION" />
    </Match>
    <Match>
        <Bug pattern="SQL_INJECTION_HIBERNATE" />
    </Match>
    <Match>
        <Bug pattern="SQL_INJECTION_JDO" />
    </Match>
    <Match>
        <Bug pattern="SQL_INJECTION_JPA" />
    </Match>
    <Match>
        <Bug pattern="SQL_INJECTION_SPRING_JDBC" />
    </Match>
    
    <!-- Path traversal vulnerabilities -->
    <Match>
        <Bug pattern="PATH_TRAVERSAL_IN" />
    </Match>
    <Match>
        <Bug pattern="PATH_TRAVERSAL_OUT" />
    </Match>
    
    <!-- Cross-Site Scripting (XSS) -->
    <Match>
        <Bug pattern="XSS_REQUEST_PARAMETER_TO_SEND_ERROR" />
    </Match>
    <Match>
        <Bug pattern="XSS_REQUEST_PARAMETER_TO_SERVLET_WRITER" />
    </Match>
    <Match>
        <Bug pattern="XSS_SERVLET" />
    </Match>
    
    <!-- Command Injection -->
    <Match>
        <Bug pattern="COMMAND_INJECTION" />
    </Match>
    
    <!-- Insecure Cryptography -->
    <Match>
        <Bug pattern="WEAK_MESSAGE_DIGEST" />
    </Match>
    <Match>
        <Bug pattern="WEAK_TRUST_MANAGER" />
    </Match>
    <Match>
        <Bug pattern="WEAK_HOSTNAME_VERIFIER" />
    </Match>
    
    <!-- Hardcoded Secrets -->
    <Match>
        <Bug pattern="HARD_CODE_PASSWORD" />
    </Match>
    <Match>
        <Bug pattern="HARD_CODE_KEY" />
    </Match>
    
    <!-- XML External Entity (XXE) -->
    <Match>
        <Bug pattern="XXE_SAXPARSER" />
    </Match>
    <Match>
        <Bug pattern="XXE_XMLREADER" />
    </Match>
    <Match>
        <Bug pattern="XXE_DOCUMENT" />
    </Match>
    
    <!-- Unvalidated Redirect -->
    <Match>
        <Bug pattern="UNVALIDATED_REDIRECT" />
    </Match>
    
</FindBugsFilter>
